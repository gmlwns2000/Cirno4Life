<Window x:Class="Cirno4Life.GifDisplayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cirno4Life"
        mc:Ignorable="d"

        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        
        Background="Transparent" 
        AllowsTransparency="True" 
        WindowStyle="None" ShowInTaskbar="False" IsEnabled="False" Topmost="True"
        
        Width="500"
        Height="281"
        >

    <Grid>
        <Image  x:Name="_gif"  gif:ImageBehavior.AnimatedSource="kawaii.gif"/>
        
    </Grid>
</Window>
